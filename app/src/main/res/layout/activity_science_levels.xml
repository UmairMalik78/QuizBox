<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <View
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="211dp"
        android:layout_marginLeft="211dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider1" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="196dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/level1"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="@string/level1"
        android:textAlignment="center"
        android:textColor="#FDEBF3EC"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="StartQuizLevel1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider2" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="139dp"
        android:layout_height="58dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="24dp"
        android:isIndicator="true"
        android:theme="@style/RatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level1" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="139dp"
        android:layout_height="58dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="24dp"
        android:clickable="false"
        android:isIndicator="true"

        android:theme="@style/RatingBar"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/level2" />

    <TextView
        android:id="@+id/level2"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="@string/level2"
        android:textAlignment="center"
        android:textColor="#FDEBF3EC"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="StartQuizLevel2"
        app:layout_constraintStart_toEndOf="@+id/divider1"
        app:layout_constraintTop_toTopOf="@+id/divider2" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="139dp"
        android:layout_height="58dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:isIndicator="true"

        android:layout_marginTop="24dp"
        android:theme="@style/RatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level3" />

    <TextView
        android:id="@+id/level3"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="@string/level3"
        android:textAlignment="center"
        android:textColor="#FDEBF3EC"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="StartQuizLevel3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider3" />
</androidx.constraintlayout.widget.ConstraintLayout>